{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": ".",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "fakeEmailSignal.ts",
    "fakeSignal.ts"
  ]
}
